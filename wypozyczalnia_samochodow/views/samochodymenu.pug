extends layout
block link
    -var wybor='Flota';
block content
    p Flota samochodów dostępna poniżej
    table(class='table table-striped table-hover')
        thead(class='thead-dark')
            tr
                th(scope='col') Samochód
                th(scope='col') Opis
                th(scope='col') Cena (1 dzień)
                th(scope='col') Dostępność
        tbody
        each item in pokazsamochody
            tr
                th #{item.markaAuto} #{item.modelAuto}
                th #{item.opisAuto}
                th #{item.cenaAuto} zł
                th
                    if item.statusAuto==1
                     b(class='text-success') Dostępny
                    else
                     b(class='text-danger') Niedostępny