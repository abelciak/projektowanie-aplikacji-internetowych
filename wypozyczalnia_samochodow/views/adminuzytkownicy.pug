extends admin
block admin
    br
    table(class='table table-striped table-hover')
        thead(class='thead-dark')
            tr
                th(scope='col') ID
                th(scope='col') Nazwa użytkownika
                th(scope='col') Rola
        tbody
        each item in daneUzytkownicy
            tr
                th #{item.idUzytkownik}
                th #{item.nazwaUzytkownik}
                th
                 if item.adminUzytkownik==1
                     button.btn.btn-outline-danger.btn-sm(type='button') Administrator
                 else if item.adminUzytkownik==0
                     button.btn.btn-outline-primary.btn-sm(type='button') Użytkownik
