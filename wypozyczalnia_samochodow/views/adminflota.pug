extends admin
block admin
    br
    a(class="btn btn-primary" href="/admin/samochod/dodaj/") Dodaj samochód
    br
    br
    table(class='table table-striped table-hover')
        thead(class='thead-dark')
            tr
                th(scope='col') Zdjęcie
                th(scope='col') Samochód
                th(scope='col') Opis
                th(scope='col') Cena (1 dzień)
                th(scope='col') Dostępność
        tbody
        each item in daneFlota
            tr
                th
                    ul.list-inline.gallery
                        li
                            img.thumbnail.zoom(src=katalog + item.zdjecieAuto style="max-width:100px;max-height:100px;")
                th #{item.markaAuto} #{item.modelAuto}
                th #{item.opisAuto}
                th #{item.cenaAuto} zł
                th
                    if item.statusAuto == 1
                        b(class='text-success') Dostępny
                        br
                        a(class="btn btn-warning btn-sm" href="/admin/samochod/dezaktywuj/" + item.idAuto role="button") Ustaw niedostępny
                    else
                        b(class='text-danger') Niedostępny
                        br
                        a(class="btn btn-success btn-sm" href="/admin/samochod/aktywuj/" + item.idAuto role="button") Ustaw dostępny
                    br
                    a(class="btn btn-info btn-sm" style="margin-top: 6px;" href="/admin/samochod/edytuj/" + item
                        .idAuto role="button") Modyfikuj